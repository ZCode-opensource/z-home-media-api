{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noImplicitAny": true,
  },
  "include": [ "./src/**/*" ],
  "exclude": ["./node_modules", "**/node_modules/*"],
}
